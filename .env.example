# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=ml_service
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ml_database
DB_USER=your_username
DB_PASSWORD=your_password
DB_CONNECTION_POOL_SIZE=10

# MongoDB Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=ml_database
MONGO_USER=your_username
MONGO_PASSWORD=your_password

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-ml-bucket

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your_connection_string
AZURE_CONTAINER_NAME=your-container

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=ml_service_experiments
MLFLOW_ARTIFACT_LOCATION=s3://your-ml-bucket/artifacts

# Model Configuration
MODEL_REGISTRY_PATH=./models
MODEL_ARTIFACT_PATH=./artifacts
DEFAULT_MODEL_TYPE=random_forest

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Monitoring & Observability
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
ENABLE_DATA_DRIFT_DETECTION=true

# Training Configuration
DEFAULT_RANDOM_STATE=42
DEFAULT_TEST_SIZE=0.2
DEFAULT_CV_SPLITS=5

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600
